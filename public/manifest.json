{
    "manifest_version": 2,
    "name": "Chrome Extension (built with TypeScript + React)",
    "description": "A boilerplate project to quickly build a Chrome extension using TypeScript and React (built using webpack).",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.atlassian.net/*",
                "http://*.atlassian.net/*"
            ],
            "js": [
                "/js/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "run_at": "document_start",
        "persistent": false
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "identity",
        "cookies",
        "storage",
        "http://*.google.com/",
        "https://*.google.com/"
    ],
    "oauth2": {
        "client_id": "274057418646-grkrs21eebl97cfrcf885ioj72eb3g0m.apps.googleusercontent.com",
        "spreadsheetId": "1aPo1wlEXueb6poGt7X3XjYVy-VPDaGJhOO5pNBMdl48",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets",
            "https://www.googleapis.com/auth/userinfo.profile",
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com/; object-src 'self'"
}